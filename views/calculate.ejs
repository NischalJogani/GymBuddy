<%- include("partials/header.ejs") %>


    <div class="container col-lg-6 col-md-10 mx-auto">
        <h1 class="text-center mb-4">Nutrition Data Form</h1>
        <form action="/nutrition-calc" method="POST">
            <div class="form-row row">
                <div class="col-md-12 mx-auto">
                    <div class="form-group">
                        <label for="foodName">Food Name:</label>
                        <select type="text" class="form-control form-control-lg" id="foodName" name="foodName" required>
                            <option value="Defualt">Please Select</option>
                            <% foodItems.forEach(function (item) { %>
                                <option value="<%= item %>"><%= item %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-row row">
                <div class="col-md-4 mx-auto">
                    <div class="form-group">
                        <label for="weight">Approx. Weight (g):</label>
                        <input type="number" step="any" class="form-control" id="weight" placeholder="Enter Approx. Weight" name="foodWeight">
                    </div>
                </div>
                <div class="col-md-4 mx-auto">
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" placeholder="Enter Quantity" name="foodQuantity">
                    </div>
                </div>
                <div class="col-md-4 mx-auto">
                    <div class="form-group">
                        <label for="volume">Volume (ml):</label>
                        <input type="number" class="form-control" id="volume" placeholder="Enter Quantity" name="foodVolume">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg data-submit">Submit</button>
        </form>
    </div>


<%- include("partials/footer.ejs") %>