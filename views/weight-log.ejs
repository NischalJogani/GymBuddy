<%- include("partials/header.ejs") %>


    <div class="container col-lg-6 col-md-10 mx-auto">
        <h1 class="text-center mb-4">Weight log form</h1>
        <form action="/weight-log" method="POST">
            <div class="form-row row">
                <div class="col-md-6 col-sm-12 mx-auto">
                    <div class="form-group">
                        <label for="date">Date (dd-mm-yy):</label>
                        <input type="date" step="any" class="form-control" id="date"
                            placeholder="Enter today's date" name="logDate">
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 mx-auto">
                    <div class="form-group">
                        <label for="weight">Weight (kg):</label>
                        <input type="number" class="form-control" id="quantity" placeholder="Enter Your weight"
                            name="logWeight">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg data-submit">Submit</button>
        </form>
    </div>


    <%- include("partials/footer.ejs") %>